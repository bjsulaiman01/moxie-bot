{
  "name": "moxie-bot",
  "version": "0.1.0",
  "description": "A modular, self-hosted Discord bot built with TypeScript, Discord.js, and PostgreSQL.",
  "main": "index.js",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "deploy": "ts-node src/deploy-commands.ts"
  },
  "keywords": ["discord", "bot", "typescript", "postgresql"],
  "author": "McGee Labs",
  "license": "MIT",
  "type": "commonjs",
  "dependencies": {
    "discord.js": "^14.25.1",
    "dotenv": "^17.2.3"
  },
  "devDependencies": {
    "@types/node": "^25.0.10",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.9.3"
  }
}
